{
  "manifest_version": 3,
  "name": "Flipkart Extension",
  "version": "1.0",
  "description": "An extension that works on Flipkart.",
  "permissions": [
    "activeTab",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "https://www.flipkart.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.flipkart.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
  