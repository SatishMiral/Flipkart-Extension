{
  "manifest_version": 3,
  "name": "Flipkart Extension",
  "version": "1.0",
  "description": "An extension that works on Flipkart.",
  "permissions": [
    "activeTab",
    "scripting",
    "background",
    "storage"
  ],
  "host_permissions": [
    "https://www.flipkart.com/*",
    "https://www.amazon.in/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.flipkart.com/*",
        "https://www.amazon.in/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
  